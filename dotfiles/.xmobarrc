-- paleta de colores de 'onedark'
-- black = "#282c34"
-- pink = "#e06c75"
-- green = "#98c379"
-- yellow = "#e5c07b"
-- blue = "#61afef"
-- magent = "#c678dd"
-- cyan = "#56b6c2"
-- grey = "#abb2bf"
--
--
Config {
	font = "xft:Cousine for Powerline:size=10"
	, additionalFonts = 
		[ 
			"xft:Mononoki Nerd Font:pixelsize=14:antialias=true:hinting=true"
			,"xft:Mononoki Nerd Font:pixelsize=16:antialias=true:hinting=true"
		]
	, bgColor = "#282c34"
	, fgColor = "#abb2bf"
	, position = TopSize L 100 30
	, lowerOnStart = True
	, hideOnStart = False
	, allDesktops = True
	, persistent = True
	, commands = [
		-- Entrada de Xmonad
		Run StdinReader


		-- fecha y hora
		-- , Run Date "%b %d %Y - (%H:%M)" "date" 50
		,Run Date "<fn=1> </fn> %b %d %Y - (%H:%M)" "date" 50


		-- memoria ram
		, Run Memory ["-t", "<fn=2> </fn>Mem: <used>M (<usedratio>%)"] 20


		-- espacio libre en disco
		, Run DiskU [("/", "<fn=1> </fn>Hdd: <free> free")] [] 60


		-- uso cpu
		, Run Cpu ["-t", "<fn=1> </fn> Cpu: (<total>%)","-H","50","--high","red"] 20


		-- cpu temperatura
		, Run CoreTemp [
			"--template" , "Cpu-Temp: <core0>°C"
			, "--Low"      , "50"        -- units: °C
			, "--High"     , "80"        -- units: °C
			, "--low"      , "#98c379"
			, "--normal"   , "#e5c07b"
			, "--high"     , "red"
		] 50


		-- cpu frecuencia
		, Run CpuFreq [
			"--template", "Freq: <cpu0>GHz"
			,"--Low"       , "0"
			,"--High"      , "2"
			,"--low"       , "lightblue"
			,"--normal"    , "white"
			,"--high"      , "#61afef"
		] 50


		-- bateria
		, Run Battery [
			"--template" , "<fn=1> </fn>Batt: <acstatus>"
			, "--Low"      , "10"        -- units: %
			, "--High"     , "80"        -- units: %
			, "--low"      , "red"
			, "--normal"   , "darkorange"
			, "--high"     , "#98c379"

			, "--" -- battery specific options
			-- discharging status
			, "-o"	, "<left>% (<timeleft>)"
			-- AC "on" status
			, "-O"	, "<fc=#dAA520>Charging</fc>"
			-- charged status
			, "-i"	, "<fc=#61afef>Charged</fc>"
		] 50
	]
	, sepChar = "%"
	, alignSep = "}{"
	, template = " %StdinReader% }{ <fc=#e06c75>%cpu%</fc> %cpufreq%  |  <fc=#98c379>%memory%</fc>  |  %disku%  |  %coretemp%  |  <fc=#61afef>%date%</fc>  |  %battery% "
}

