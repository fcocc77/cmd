{
	"python.linting.pylintEnabled": true,
	"python.linting.mypyEnabled": true,
	"diagnostic.enable": true,
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["cc", "cpp", "c++"],
			"rootPatterns": [".ccls"],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		}
	}
}
