{
    "python.linting.pylintEnabled": false,
	"python.linting.mypyEnabled": false,
    "python.linting.enabled": false,
    "pyright.enable": true,
    "python.pythonPath": "python3",
    "diagnostic.enable": true,
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["cc", "cpp", "c++"],
			"rootPatterns": [".ccls"],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		}
	}
}
